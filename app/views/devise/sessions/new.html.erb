<div class="container login_main">
<div class="container devise_form">

    <div class="row justify-content-md-center mttitle">
      <div class="col-md-7 bor">
        <h4 class="mt">로그인</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% elsif notice %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  
    <div class="field mt">
      <%= f.label :"이메일" %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", value: "kbs4674@naver.com" %>
    </div>
  
    <div class="field mt">
      <%= f.label :"암호" %><br />
      <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "off", value: "123456" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field mt" align="right">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    
      <div class="container row" style="justify-content: center;">
        <div>
          <%= f.submit "로그인", class: "btn btn-sm btn-info" %>
        </div>
        
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <div style="margin-left: 10px">
            <%= link_to "네이버 아이디 로그인", omniauth_authorize_path(resource_name, provider), class: "btn btn-sm", style: "background-color: #00C73C; color: white" %>
            </div>
          <% end -%>
        <% end -%>
  
      </div>
    </div>
    
  <% end %>
  </div>
  <div style="margin-top: 30px" align="center">
    <%= render "devise/shared/info" %>
  </div>
</div>
</div>
  